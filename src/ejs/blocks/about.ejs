<% const about = require('../../config/about.js'); %>

<section id="<%= about.id %>" class="about section section--white">
    <div class="container">
        <h2 class="title__h2 section__title animated" data-animation="slide-in-left">
            <%= about.header %>
            <hr class="section__title-divider animated" data-animation="slide-in-left" data-delay="0.4s">
        </h2>
        <div class="row justify-content-center">
            <div class="col-xl-2 col-md-3 d-flex align-items-center justify-content-center" data-animation="fade-in" data-delay="0.4s">
                <div class="about__photo">
                    <img class="about__photo-img" alt="Maxim Efremov" src="/assets/img/photo.jpg" srcset="/assets/img/photo@2x.jpg 2x">
                </div>
            </div>
            <article class="article animated col-xl-9 col-md-9" data-animation="slide-in-right">
                <%= about.article %>
            </article>
        </div>
    </div>
</section>
